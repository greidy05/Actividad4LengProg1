@model Actividad4LengProg.Models.Materia

@{
    ViewData["Title"] = "Editar Materia";
}

<h2>Editar Materia</h2>

<form asp-action="Editar" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="Codigo" class="form-label"></label>
        <input asp-for="Codigo" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Creditos" class="form-label"></label>
        <input asp-for="Creditos" type="number" min="1" class="form-control" required />
        <span asp-validation-for="Creditos" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Carrera" class="form-label"></label>
        <input asp-for="Carrera" class="form-control" required />
        <span asp-validation-for="Carrera" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
