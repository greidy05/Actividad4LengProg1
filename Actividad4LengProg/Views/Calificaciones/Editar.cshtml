@model Actividad4LengProg.Models.Calificacione

<h2>Editar Calificación</h2>

<form asp-action="Editar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Estudiante</label>
        <select asp-for="MatriculaEstudiante" asp-items="ViewBag.Estudiantes" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label>Materia</label>
        <select asp-for="CodigoMateria" asp-items="ViewBag.Materias" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label>Nota</label>
        <input asp-for="Nota" class="form-control" type="number" min="0" max="100" />
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Periodo</label>
        <input asp-for="Periodo" class="form-control" />
        <span asp-validation-for="Periodo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
