@model Actividad4LengProg.Models.Calificacione
@{
    ViewData["Title"] = "Crear Calificación";
}

<h2 class="text-center mb-4">Crear Calificación</h2>

<form asp-action="Crear" method="post" class="w-50 mx-auto">
    <div class="form-group mb-3">
        <label asp-for="MatriculaEstudiante" class="form-label">Estudiante</label>
        <select asp-for="MatriculaEstudiante" asp-items="ViewBag.Estudiantes" class="form-select"></select>
        <span asp-validation-for="MatriculaEstudiante" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CodigoMateria" class="form-label">Materia</label>
        <select asp-for="CodigoMateria" asp-items="ViewBag.Materias" class="form-select"></select>
        <span asp-validation-for="CodigoMateria" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Nota" class="form-label">Nota</label>
        <input asp-for="Nota" class="form-control" type="number" />
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Periodo" class="form-label">Periodo</label>
        <input asp-for="Periodo" class="form-control" />
        <span asp-validation-for="Periodo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
